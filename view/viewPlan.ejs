<!DOCTYPE html>
<html>
    <head>
        <title>View Workout Plan </title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <style>
            h5{display:inline}
            .description{
                float:left
                }
            .workout{
                float:left
            }
            .button{
                background-color: #f09892
            }
        </style>
    </head>
    <body>
      <div class="container">
            <h1>View Workout Plan</h1>
            <a href="https://workio.us/">Home </a> <hr>
            <div class="description col-sm-6">
                <h5>Name: </h5><%=plan.name%><br>
                <h5>Author: </h5><%=plan.username%><br>
                <h5>Description: </h5><%=plan.description%><br>
                <h5>Type: </h5><%=plan.type%><br>
                <h5>Difficulty: </h5><%=plan.difficulty%><br>
                <h5>Body Parts: </h5><%=plan.bodyParts%><br>
                <h5>Privacy: </h5>
                <% if (plan.privacy == "0") {%>
                    Public
                <% } else if (plan.privacy == "1") {%>
                    Private
                <% } %><br>
                <a href="https://workio.us/plans/<%=plan._id%>?action=edit">
                    Edit Plan Information</a>
                <div>
                    <form action='/delete/<%=plan._id%>' method='post'>
                        <button class="button" type="submit" name="action">Delete Plan</button>
                    </form>
                </div>
            </div>

            <div class="workout col-sm-6">
                <p>This plan includes the following workouts, in order: </p>
                <% plan.workouts.forEach((workoutid, i) => { %>
                    <li><a href=<%= "https://workio.us/workouts/" + plan._id + "/" + workoutid + "/view" %> >
                        Workout <%=i+1%>
                    </a></li>
                <% }) %><br>
                <a href="https://workio.us/workouts/<%=plan._id%>?action=create">
                    Add New Workout</a>
            </div>
      </div>
    </body>
</html>
